{
  "name": "puzh-hugo-site",
  "version": "1.0.0",
  "description": "PUZH.com Landing Page - Hugo + Tailwind CSS + Cloudflare",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"hugo server -D\" \"npm run tailwind:watch\"",
    "build": "NODE_ENV=production npm run tailwind:build && hugo --gc --minify",
    "tailwind:watch": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch",
    "tailwind:build": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --minify"
  },
  "keywords": [
    "hugo",
    "tailwind",
    "cloudflare",
    "puzh",
    "productivity"
  ],
  "author": "Chris Monninghoff",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.0"
  }
}
